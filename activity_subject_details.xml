<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subjectDetails">
    <ImageView
        android:id="@+id/pic_detail"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/books"
        />

    <TextView
        android:id="@+id/sub_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pic_detail"
        android:layout_alignParentLeft="true"
        android:textSize="30sp"
        android:text="Page under Construction" />

    <Button
        android:id="@+id/button_present"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textSize="10sp"
        android:text="Present"
        android:backgroundTint="#4caf50"
        android:layout_below="@+id/sub_name"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:onClick="present"/>

    <Button
        android:id="@+id/button_absent"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textSize="10sp"
        android:text="Absent"
        android:backgroundTint="@android:color/holo_red_dark"
        android:layout_below="@+id/sub_name"
        android:layout_toRightOf="@+id/button_present"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="70dp"
        android:onClick="absent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details"
        android:textSize="15sp"
        android:layout_below="@+id/button_present"
        android:layout_marginTop="20dp"
        android:id="@+id/details"/>

</RelativeLayout>